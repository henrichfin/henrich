RewriteEngine On

# Handle API requests
RewriteCond %{REQUEST_URI} ^/henrich/backend/
RewriteRule ^backend/(.*)$ backend/api.php [QSA,L]

# Serve the main app
RewriteCond %{REQUEST_URI} ^/henrich/$
RewriteRule ^$ index.html [L]

# Serve static files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.html [L]
